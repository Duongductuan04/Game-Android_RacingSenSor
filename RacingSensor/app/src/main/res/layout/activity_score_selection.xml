<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_racing_car"
    android:orientation="vertical">

    <!-- Lớp phủ gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE GAME MODE"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- Phần SCORE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnScore500"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginEnd="2dp"
                android:text="500"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"/>

            <Button
                android:id="@+id/btnScore1000"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginEnd="2dp"
                android:text="1000"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"/>

            <Button
                android:id="@+id/btnScore2000"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginEnd="2dp"
                android:text="2000"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"/>

            <Button
                android:id="@+id/btnScore5000"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="5000"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"/>
        </LinearLayout>

        <!-- Nút Invite Friends và Single Player -->
        <Button
            android:id="@+id/btnInviteFriends"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:text="INVITE FRIENDS"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>

        <Button
            android:id="@+id/btnSinglePlayer"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="SINGLE PLAYER"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>

    </LinearLayout>

</LinearLayout>
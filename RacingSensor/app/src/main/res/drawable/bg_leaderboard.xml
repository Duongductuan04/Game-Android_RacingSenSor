<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp nền màu gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF1A2A40"
            android:endColor="#FF0D1B2A"
            android:angle="135"/>           <!-- Góc chéo từ trái sang phải -->

            <!-- Hiệu ứng bóng đổ -->
            <stroke
                android:width="1dp"
                android:color="#33000000"/>
        </shape>
    </item>

    <!-- Hiệu ứng đường đua (tùy chọn) -->
    <item android:top="100dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#4DFFFFFF"
                android:dashWidth="10dp"
                android:dashGap="5dp"/>
        </shape>
    </item>

    <!-- Hiệu ứng ánh sáng (tùy chọn) -->
    <item android:bottom="200dp" android:right="100dp">
        <shape android:shape="oval">
            <solid android:color="#15FFFFFF"/>
            <size android:width="300dp" android:height="300dp"/>
        </shape>
    </item>
</layer-list>